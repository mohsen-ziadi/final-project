<!DOCTYPE html>
<html>
<head>
    <%- include("common/head.ejs") %>
    <title>Document</title>
</head>
<body>
    <%- include("common/navbar.ejs") %>
    <div class="container-sm">
        <form action="/auth/update" method="post" id="update-user">
            <label for="fristname-updateUser">نام:</label>
            <input id="fristname-updateUser" type="text" value="<%= result.fristname %> " class="w-25 p-1" name="fristname"><br>
           
            <label for="lastname-updateUser"> نام خانوادگی:</label>
            <input id="lastname-updateUser" type="text" value="<%= result.lastname %> " class="w-25 p-1" name="lastname"><br>
           
            <label for="username-updateUser">نام کاربری :</label>
            <input id="username-updateUser" type="text" value="<%= result.username %> " class="w-25 p-1" name="username"><br>
          
            <label for="email-updateUser">ایمیل:</label>
            <input id="email-updateUser" type="text" value="<%= result.email %> " class="w-25 p-1" name="email"><br>
          
            <label for="callnumber-updateUser">شماره تلفن:</label>
            <input id="callnumber-updateUser" type="text" value="<%= result.callnumber %> " class="w-25 p-1" name="callnumber"><br>
    
            <label for="role-updateUser">نقش:</label>
            <select name="role" class="w-25" value="<%= result.role %>">
                <option value="admin">ادمین</option>
                <option value="blogger">بلاگر</option>
            </select><br>

    
            <label for="sex-updateUser">جنسیت:</label>
            <select name="sex" class="w-25"  value="<%= result.sex %>">
                
                    <option value="male">مرد</option>
                    <option value="female">زن</option>

            </select><br>

           
            <label for=""></label>
            <button type="submit" class="my-button3 w-25">بروزرسانی</button>
         </form>
    
    </div>
    <%- include("common/footer.ejs") %>
    <%- include("common/script.ejs") %>
</body>
</html>